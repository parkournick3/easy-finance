{
  "name": "easy-finance",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "db:studio": "turbo db:studio",
    "db:migrate": "turbo db:migrate",
    "db:generate": "turbo db:generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:start": "docker compose -f docker-compose.dev.yml up -d",
    "clean": "turbo clean && rm -rf .turbo && rm -rf node_modules && rm -rf .next",
    "prepare": "husky",
    "test": "turbo test"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.6",
    "prettier": "^3.2.5",
    "turbo": "^2.1.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
